<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/session_item_padding_vertical"
    android:paddingBottom="@dimen/session_item_padding_vertical"
    android:gravity="center_vertical"
    android:focusable="true"
    android:clickable="true">

  <TextView
      android:id="@+id/tvTitle"
      style="@style/SessionText.Item.Title"/>

  <TextView
      android:id="@+id/tvDescription"
      style="@style/SessionText.Item.Description"
      android:layout_below="@id/tvTitle"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/ivSessionAvatar"
      android:layout_alignTop="@id/tvTitle"
      style="@style/CircleImageView" />

</RelativeLayout>