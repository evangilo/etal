<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/session_padding_bottom"
    android:paddingBottom="@dimen/session_padding_bottom">

  <TextView
      android:id="@+id/tvTitle"
      style="@style/ScheduleItemTitle"
      android:text="Introdução à plataforma Android."/>

  <TextView
      android:id="@+id/tvSubtitle"
      style="@style/ScheduleItemDescription"
      android:layout_below="@id/tvTitle"
      android:text="19:00 - 20:00 (sala 101)"/>

  <ImageView
      android:background="@drawable/ic_schedule"
      android:layout_centerVertical="true"
      android:layout_marginLeft="@dimen/medium_margin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

</RelativeLayout>